{
    "manifest_version": 3,
    "name": "Naver Blog Content Extractor",
    "version": "1.0",
    "description": "Extracts blog contents from Naver blogs",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "./popup/popup.html"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "host_permissions": [
        "<all_urls>"
     ],

    "web_accessible_resources": [
     {
       "resources": ["./content.js"],
       "matches": ["<all_urls>"]
     }
   ]	

}
